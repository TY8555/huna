        <!--게시판 불러오기-->
        <% unless @myposts.nil? %>
            <% @myposts.each do |c| %>
             <% c.replies.each do |reply| %>
              <div class="col-md-2"></div>
              <div class="col-md-8 col-xs-12"  id="mypostmobile">
                    <!--<div class="col-md-offset-1">-->
                    
                     <!--style="padding-right: 100px"-->
