<head>

   <!-- Preloader -->
  <link rel="stylesheet" href="../../assets/css/preloader.css" type="text/css" media="screen, print"/>

  <!-- Icon Font-->
  <link rel="stylesheet" href="../../assets/style.css">
  <link rel="stylesheet" href="../../assets/css/owl.carousel.css">
  <link rel="stylesheet" href="../../assets/css/owl.theme.default.css">
  <!-- Animate CSS-->
  <link rel="stylesheet" href="../../assets/css/animate.css">

  <!-- Bootstrap -->
  <link href="../../assets/css/bootstrap.min.css" rel="stylesheet">



  <!-- Style -->
  <link href="../../assets/css/style.css" rel="stylesheet">

  <!-- Responsive CSS -->
  <link href="../../assets/css/responsive.css" rel="stylesheet">
</head>


<style>
  .form-group {
    margin-bottom:10px;
  }
</style>

<div class="col-md-offset-3 col-md-6 text-center">
    <div class="work_title  wow fadeInUp animated">
        <h1>미팅 게시글 수정하기</h1>
        <img src="/../assets/shape.png" alt="">
    </div>
    <form class="form-horizontal" action="/board/modify2/<%= @one_board.id %>" method="GET">
      
      <div class="form-group">
        <label class="col-sm-2 control-label">미팅 참여자 수</label>
          <div class="col-sm-4">
            <input class="form-control" type="number" name="number_md"  required="" value="<%= @one_board.number %>">
          </div>
        <label class="col-sm-2 control-label">평균 나이</label>
          <div class="col-sm-4">
            <input class="form-control" type="number" name="age_md" required="" value="<%= @one_board.age %>">
          </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">제목</label>
        <div class="col-sm-10">
          <input class="form-control" type="text" name="title_md" value="<%= @one_board.board_title %>" required="">
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label" >나의 팀 소개</label>
        <div class="col-sm-10">
          <textarea class="form-control" type="text" rows="5" name="board_content_md" required=""><%= @one_board.board_content %></textarea>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">원하는 팀</label>
        <div class="col-sm-10">
          <textarea class="form-control" type="text" rows="5" name="needs_team_md" required=""><%= @one_board.needs_team %></textarea>
        </div>
      </div>
     
      <div class = "container  col-md-12 text-center" style="margin-top: 30px">
      <div class="form-group">
        <button type="submit" class="btn btn-default submit-btn form_submit" style="border-style:hidden">수정하기</button>
      </div>
     </form>

      
      <div class="form-group">
        <button type="button" class="btn btn-primary cs-btn" style="border-style:hidden; width:100%" onclick="location.href='/board/index'">돌아가기</button>
      </div>
      </div>
</div>


